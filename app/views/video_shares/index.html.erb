<div class="video-row">
  <% @videos.each do |video| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <img class="card-img" src="<%= video.thumbnail_url %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= link_to video.title, video.url, target: "_blank" %></h5>
          <p class="card-text"><%= video.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
